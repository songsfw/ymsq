/* pages/user/user.wxss */
@import "../../template/loading/loading.wxss";
view{font-size:12px}
image{width: 100%;height: 100%}
page{background: #F6F6F6;height: auto;}
.fixed-holder{height: 38px;}
.pro-box{margin:20rpx 24rpx;border-radius: 16rpx;background-color: #fff;padding:0 20rpx;}
.pro-box .hd{line-height: 46px;border-bottom: 1px solid #F6F6F6;align-items: center;}
.checkbox{position: relative; width: 20px;height: 20px;border: 1px solid #ccc;border-radius: 50%;line-height: 1;margin-right: 20rpx;box-sizing: border-box;}
.checkbox view{position: absolute;left:1px;top: 0; display: none; width: 100%;height: 100%;font-size: 20px;color:#C1996B;}
.checkbox.on{border: none;}
.checkbox.on view{display: block;}
.pro-box .hd text{font-size: 16px;font-weight: bold;}
.pro-list{padding: 22rpx 0 56rpx 0;overflow: hidden;}
.pro-list .item:last-child{margin-bottom: 0;}
.pro-info .pic{position: relative; width: 90px;height: 90px;overflow: hidden;margin-right: 20rpx;background: #F6F6F6;border-radius: 4px;}
.pro-info .pic .tag{display: none;}
.pro-info.sold-out .pic image{opacity: .9;}
.pro-info.sold-out .tit{color: #aaa;}
.pro-info.sold-out .pic .tag{display: block; position: absolute;left: 50%;top: 50%; font-size: 12px;color: #fff;width: 45px; line-height: 45px;height: 45px;text-align: center;border-radius: 50%;transform: translate(-50%,-50%);z-index: 2;background-color: rgba(0, 0, 0, 0.4);}
.pro-info .checkbox{margin-right: 20rpx;}
.pro-info .txt{justify-content: space-between;flex-direction: column;}
.item{position: relative;width: 100%; align-items: center;margin-bottom: 40rpx;}
.bread-item{height: 90px;}
.cake-item{height: 100px;}
.item-wrap{width:662rpx;height: 100%;}
.move-area{width:820rpx;height:100%;}
.item .tit{font-size: 14px;color: #222;margin-bottom: 6px;font-weight: 500;margin-top: 2px;}
.item .tag{margin-bottom: 10px;    display: flex;
    flex-wrap: wrap;}
.item .tag text{color: #aaa; font-size: 12px; margin:0 5px 2px 0; }
.item .tit .tag{color: #fff;font-size: 10px;padding:4rpx 4rpx;margin-right: 10rpx;background: linear-gradient(to right,#ffa052,#f52422);border-radius: 8rpx;margin-bottom: 0;vertical-align: middle;}
.item .tag text:after{content: "|"; font-size: 10px; display: inline-block; margin-left: 10rpx;}
.item .tag text:last-child:after{display: none;}
.item .price{justify-content: space-between;align-items: center;font-weight: 500;text-align: right;color: #C1996B;}
.item .price .num{font-size: 11px;color: #222;}
.item .price .num text{font-size: 14px;font-weight:500 ;}
.item .price .add{width:44rpx;height: 44rpx;color: #C1996B;
    font-size: 22px;}
.icon-minus.one,
.icon-trash.one{background: #FAFAFA !important;color: #ccc !important;}
.item .pro-option{position: absolute;right:0;top: 0;height: 100%;width: 148rpx;}
.chartdel{display: flex;align-items: center;justify-content: center; width: 148rpx; color: #fff;background: #E02020;height: 100%;}

.touch-item {
  display:flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  background: #f5f5f5;
  height: 216rpx;
  }
  
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.set-chart text,
.set-chart .count{width:27px;height: 24px;line-height: 24px;text-align: center;color: #C1996B;background-color: #F6F6F6;}
.set-chart .count{color: #333;margin: 0 4rpx;}
.set-chart{border-radius: 4rpx;overflow: hidden;}
.logo{width: 130rpx;height: 54rpx;margin: 102rpx auto;}

.option{background: #fff; position: fixed;left: 0;bottom:0; width: 100%;height:100rpx;z-index: 11;justify-content: flex-end;align-items: center;padding: 0 20rpx;box-sizing: border-box;border-top: 1rpx solid #F6F6F6;}

.option .select text{font-size: 14px;color: #999;}
.option .price{align-items: center;}
.option .price view{font-size: 13px;font-weight: 500;align-items: flex-end;}
.option .price .num{color: #C1996B;line-height: 1;}
.option .price .num text{font-size:20px;font-weight: 500;}
.buy-btn{padding: 0 18px; height: 36px;background: #C1996B;color: #fff;text-align: center;line-height: 36px;border-radius: 18px;margin-left: 20rpx;font-weight: 500;}

.tips{padding:0 24rpx 24rpx 24rpx; font-size: 12px;color: #aaa;z-index: 2;box-sizing: border-box;overflow: hidden;background-color: #fff;}
.tips .iconfont{ margin-right: 20rpx;font-weight: 500;}
.tips .txt{white-space: nowrap;overflow:hidden ;}
.tips .txt text{display: inline-block; animation: remindMessage 14s linear infinite;padding-right: 10rpx;font-size: 13px;}

.pic-box{width: 426rpx; align-items: center;margin: 16rpx 0;box-sizing: border-box;margin-right: 74rpx;}
.pic-box .pic{position: relative; width: 120rpx;height: 120rpx;border-radius:8rpx ;margin-right: 20rpx;overflow: hidden;flex-shrink: 0;}
.pic-box .pic1{width: 100%;}
.pic-box .pic1>view{justify-content: space-between;flex-direction: column;}
.pic-box .pic1 .num{color: #999;}
.pic-box .pic1 .h3{font-size: 14px;}
.pic-box .count{position: absolute;right: 0;bottom: 0;background: rgba(0, 0, 0, .4);line-height: 1; color: #fff;font-size: 22rpx;border-radius: 8rpx 0 0 0 ;padding: 4rpx 6rpx;}

@keyframes remindMessage {
  0% {
    transform: translateX(0%);
  }

  100% {
    transform: translateX(-100%);
  }
}

.mask{position: fixed;left: 0;top: 0%; width: 100%;height: 100%;background: rgba(0,0,0,.8);z-index: 21;}
.pop-panel{ position: fixed;left: 0;bottom: 0; width: 100%;background: #fff;z-index: 22;border-radius:16rpx 16rpx 0 0 ;}
.pop-panel .close{position: absolute;right: 5rpx;top:10rpx;width: 38px;height: 38px;}
.pop-panel .close:after,
.pop-panel .close::before{border-color: #999;}
.pop-con{padding: 40rpx 40rpx 20rpx 40rpx;}
.confirm-btn{margin-top: 50rpx;}
.score-panel .pic{width: 200rpx;height: 200rpx;border-radius: 8rpx;margin-right: 20rpx;}
.score-panel .h3{justify-content:space-between; flex-direction: column;}
.score-panel .tit{font-size: 16px;font-weight: bold;}
.score-panel .price{font-size: 14px;color: #C1996B;}

.score-panel .h4{margin-top: 60rpx;justify-content: space-between;align-items: center;margin-bottom: 40rpx;}
.fitting-list{flex-wrap: wrap;margin-bottom: -30rpx;}
.fitting-list view{margin: 0 20px 15px 0;padding: 6px 12px; border-radius: 4px;background: #F6F6F6;color: #333;border: 1rpx solid #F6F6F6;font-size: 13px;}
.fitting-list view.on{border-color: #C1996B;color: #C1996B;background: rgba(193, 153, 107, 0.1);}
.score-panel .h4>text{font-size: 14px;color: #333;font-weight: bold;}
.fittings .hd{border-bottom: none;}
.fittings scroll-view{flex-wrap: nowrap;}
.fittings .item{width: 260rpx;flex-shrink: 0; border-radius:8rpx;background: #fff;overflow: hidden;margin-right: 20rpx;
    box-shadow: 0px 6px 10px -8px rgba(0, 0, 0, 0.2);}
.fittings .list .item:last-child{margin-right: 0;}
.fittings .item .pic{width: 260rpx;height: 260rpx;}
.fittings .item .tit{font-size: 13px;height: 34px;overflow: hidden;}
.fittings .item .tit,.fittings .item .price{padding:0 20rpx;margin: 16rpx 0;}
.fittings .item .price{justify-content: space-between;}
.fittings .item .price .num{font-size: 11px;}

.fittings .item .price .add{width:20px;height: 20px;color: #C1996B;font-size: 20px;}
.fittings .info{margin-top: 30rpx;}
.fittings .info .tit{font-size: 13px;margin-right: 40rpx;}
.fittings .info .txt{color: #666;}
.fittings .info .txt text{color: #C1996B;}
.fittings .info .txt view{margin-bottom:30rpx ;font-size: 13px;}
.basic{max-height: 80px;-webkit-overflow-scrolling: touch;overflow-y: auto;}
.basic text{font-weight: bold;color: #C1996B;}
.pro-tip{padding-top: 22rpx;font-size: 13px;color:#666;}
.pro-tip .tag{display: inline-block; height: 18px;line-height: 18px;margin-right: 16rpx; padding: 0 16rpx;background: rgba(100,192,0,.15);color:#64C000; border-radius: 8rpx;font-size: 12px;}
.order-panel{background-color: #F6F6F6;overflow:hidden;}
.order-panel .pop-con{padding: 0;margin:24rpx;border-radius: 4rpx;margin-bottom: 180rpx;}
.order-panel .title{font-size: 16px;font-weight: bold;height: 48px;line-height: 48px;text-align: center;background-color: #fff;}
.order-panel .item{background-color: #fff;margin-bottom: 20rpx;padding: 16rpx 20rpx;border-radius: 8rpx;}
.order-panel .h3{font-size: 14px;font-weight: bold;}
.charge{height: 26px; background-color: #C1996B;color: #fff;padding: 0 12px;border-radius: 13px;line-height: 26px; flex-shrink: 0;}