/**index.wxss**/
view{font-size:12px}
page{padding-bottom: 140rpx;background: #fff;}
.wrap{padding:0 26rpx;}
.wrap-all{padding: 10px;}

.item{box-sizing: border-box}

.col-2 .item{width: 50%;}
.col-3 .item{width: 33.33%;}

.block-wp{padding-bottom: 20px;}


.navBar .title{width:100%;position: absolute;left: 0;text-align: center;}
.contain{background: #fff;padding-top: 40rpx;}
.movieInfo{padding: 40rpx 30rpx 0 30rpx;box-sizing: border-box;overflow: hidden;color: #333;}
.movieview{width:160rpx;height: 212rpx;border-radius:8rpx ;margin-right: 30rpx;overflow: hidden;}

.movieInfo .movietxt .h3{font-size: 40rpx;font-weight: bold;line-height: 1;margin-bottom: 14rpx;}
.movietxt .txt{margin-top: 18rpx;}
.movietxt .txt1{margin:10rpx 0;}
.movietxt .txt2{color: #999;}
.movieInfo .movietxt .iconfont{font-size: 12px;color: #E0E0E0;}
.seat-type view{height: 30rpx;line-height: 30rpx;}
.seat-type{padding:26rpx 0 24rpx 0;margin: 0 30rpx; justify-content: space-around;border-top: 1rpx solid #EDEDED;}
.seat-type image{width: 34rpx;height: 30rpx;vertical-align: middle;margin-right: 12rpx;}
.notice{color: #999;padding: 30rpx;border-top:20rpx solid #F4F6F8;}
.buy-btn{margin: 30rpx;width: auto;font-size: 13px;height: 80rpx;line-height: 80rpx;border-radius: 40rpx;}
.del-price{color: #FCB5B9;font-size:12px ;text-decoration: line-through;}
.select-tbl view .icon-close{position: absolute;right: 0;top:50%;width: 20px;height: 20px;transform:translateY(-50%);}
.seats{margin-top: 20rpx;}
.seats text{border:1px solid #e9e9e9;color: #999;margin-right: 8rpx;font-size: 20rpx;line-height: 28rpx;padding:0 8rpx;border-radius: 4rpx;}
.tips{margin: 38rpx 30rpx;border-top: 1px solid #EDEDED;padding-top: 32rpx;}
.tips view{text-align: center;height: 30px;line-height: 30px;background-color: #FFDFE3;color:#F73950;border-radius: 8px;}

.price{justify-content: space-between;padding: 42rpx 0;font-size: 14px;border-top: 1rpx solid #EDEDED;margin: 0 30rpx;}
.pay-price{font-size: 16px;text-align: right;margin-bottom: 10rpx;}
.coupon{padding:0 30rpx}
.coupon>view{justify-content: space-between;margin-bottom: 40rpx;}
.coupon .tit{color: #333;font-size: 14px;}
.coupon .txt{color: #FCA100;font-size: 12px;}
.coupon .txt .iconfont{font-size: 12px;}
.coupon-price{font-size: 12px; color: #666;margin-bottom: 16rpx;text-align: right;}
.coupon-price view{color: #666;margin-bottom: 10rpx;}
.cancle-btn{width: 200rpx;
    height: 50rpx;
    border: 1rpx solid #ccc;
    line-height: 50rpx;
    text-align: center;
    margin-top: 20rpx;
    border-radius: 25rpx;
    color: #999;}