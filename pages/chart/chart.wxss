/* pages/user/user.wxss */
view{font-size:12px}
image{width: 100%;height: 100%}
page{background: #F6F6F6;height: auto;}
.fixed-holder{height: 60px;}
.pro-box{margin:20rpx 24rpx;border-radius: 8rpx;background-color: #fff;padding:0 20rpx;}
.pro-box .hd{line-height: 46px;border-bottom: 1px solid #F6F6F6;align-items: center;}
.checkbox{position: relative; width: 18px;height: 18px;border: 1px solid #ccc;border-radius: 50%;line-height: 1;margin-right: 20rpx;box-sizing: border-box;}
.checkbox view{position: absolute;left: 0;top: 0; display: none; width: 100%;height: 100%;font-size: 18px;color:#C1996B;}
.checkbox.on{border: none;}
.checkbox.on view{display: block;}
.pro-box .hd text{font-size: 16px;font-weight: bold;}
.pro-list{padding: 26rpx 0;overflow: hidden;}
.pro-list .item:last-child{margin-bottom: 0;}
.pro-info .pic{width: 180rpx;height: 180rpx;overflow: hidden;margin-right: 20rpx;background: #F6F6F6;border-radius: 4rpx;}
.pro-info .checkbox{margin-right: 20rpx;}
.pro-info .txt{justify-content: space-between;flex-direction: column;}
.item{position: relative; align-items: center;margin-bottom: 40rpx;}
.item .tit{font-size: 15px;color: #222;margin-bottom: 8px;font-weight: 500;margin-top: 4rpx;}
.item .tag{margin-bottom: 10px;    display: flex;
    flex-wrap: wrap;}
.item .tag text{background: #F6F6F6;color: #aaa;height: 18px;line-height: 18px; padding: 0 8px;border-radius:9px;margin:0 5px 5px 0; }
.item .price{justify-content: space-between;align-items: center;font-weight: 500;}
.item .price .num{font-size: 13px;color: #FA603D;}
.item .price .num text{font-size: 16px;font-weight:500 ;}
.item .price .add{width:44rpx;height: 44rpx;color: #FA603D;
    font-size: 22px;}

.item .pro-option{position: absolute;right:-168rpx;top: 0;height: 100%;width: 168rpx;}
.chartdel{display: flex;margin-left: 20rpx; align-items: center;justify-content: center; width: 148rpx; color: #fff;background: #E02020;height: 100%;}

.touch-item {
  display:flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  background: #f5f5f5;
  height: 216rpx;
  }
  
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
  }

.set-chart text,
.set-chart .count{width:27px;height: 24px;border: 1px solid #e9e9e9;line-height: 24px;text-align: center;color: #C1996B;}
.set-chart .count{color: #333;border-left: 0;border-right: 0;}

.logo{width: 130rpx;height: 54rpx;margin: 102rpx auto;}

.option{background: #fff; position: fixed;left: 0;bottom:0; width: 100%;height:100rpx;z-index: 11;justify-content: flex-end;align-items: center;padding: 0 20rpx;box-sizing: border-box;}

.option .select text{font-size: 14px;color: #999;}
.option .price{align-items: center;}
.option .price view{font-size: 13px;}
.option .price .num{color: #FA603D;}
.option .price .num text{font-size:16px;font-weight: 500;}
.buy-btn{width: 88px;height: 36px;background: linear-gradient(176deg, #E2C9A4 0%, #C1996B 100%);color: #fff;text-align: center;line-height: 36px;border-radius: 18px;margin-left: 20rpx;}

.tips{position: fixed;left: 0;top: 0;width: 100%; background: #FEFBF3;font-size: 14px;color: #FF7D06;padding:10px 20rpx;margin-bottom: 24rpx;z-index: 2;align-items: center;box-sizing: border-box;}
.tips .iconfont{margin-right: 20rpx;}

.mask{position: fixed;left: 0;top: 0%; width: 100%;height: 100%;background: rgba(0,0,0,.8);z-index: 21;}
.pop-panel{ position: fixed;left: 0;bottom: 0; width: 100%;background: #fff;z-index: 22;border-radius:16rpx 16rpx 0 0 ;}
.pop-panel .close{position: absolute;right: 5rpx;top:10rpx;width: 38px;height: 38px;}
.pop-panel .close:after,
.pop-panel .close::before{border-color: #999;}
.pop-con{padding: 40rpx 40rpx 20rpx 40rpx;}
.confirm-btn{margin-top: 50rpx;}
.score-panel .pic{width: 200rpx;height: 200rpx;border-radius: 8rpx;margin-right: 20rpx;}
.score-panel .h3{justify-content:space-between; flex-direction: column;}
.score-panel .tit{font-size: 16px;font-weight: bold;}
.score-panel .price{font-size: 14px;color: #FA603D;}

.score-panel .h4{margin-top: 60rpx;justify-content: space-between;align-items: center;margin-bottom: 40rpx;}
.fitting-list{flex-wrap: wrap;margin-bottom: -30rpx;}
.fitting-list view{margin: 0 20px 15px 0;padding: 6px 12px; border-radius: 4px;background: #F6F6F6;color: #333;border: 1rpx solid #F6F6F6;font-size: 13px;}
.fitting-list view.on{border-color: #C1996B;color: #C1996B;background: rgba(193, 153, 107, 0.1);}
.score-panel .h4>text{font-size: 14px;color: #333;font-weight: bold;}
.fittings{padding-bottom:36rpx;}
.fittings .hd{border-bottom: none;}
.fittings scroll-view{flex-wrap: nowrap;}
.fittings .item{width: 260rpx;flex-shrink: 0; border-radius:8rpx;background: #fff;overflow: hidden;margin-right: 20rpx;
    box-shadow: 0px 6px 10px -8px rgba(0, 0, 0, 0.2);}
.fittings .list .item:last-child{margin-right: 0;}
.fittings .item .pic{width: 260rpx;height: 260rpx;}
.fittings .item .tit{font-size: 13px;height: 34px;overflow: hidden;}
.fittings .item .tit,.fittings .item .price{padding:0 20rpx;margin: 16rpx 0;}
.fittings .item .price{justify-content: space-between;}
.fittings .item .price .num{font-size: 11px;color: #FA603D;}
.fittings .item .price .num text{font-size: 15px;}
.fittings .item .price .add{width:34rpx;height: 34rpx;color: #C1996B;
    font-size: 17px;}
.fittings .info{margin-top: 30rpx;}
.fittings .info .tit{font-size: 13px;margin-right: 40rpx;}
.fittings .info .txt{color: #666;}
.fittings .info .txt text{color: #C1996B;}
.fittings .info .txt view{margin-bottom:30rpx ;font-size: 13px;}
.basic{max-height: 80px;-webkit-overflow-scrolling: touch;overflow-y: auto;}
.basic text{font-weight: bold;color: #C1996B;}