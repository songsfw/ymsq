@import "../../../template/loading/loading.wxss";
page{border-top: 1px solid #F6F6F6;}
.card{text-align: center;padding:42rpx 0 50rpx 0;background-color: #F6F6F6;}
.card .bg{position: absolute;left: 0;top: 0; width: 750rpx;height: 438rpx;}
.card .card-wp{position: relative; width: 670rpx;height: 380rpx;margin: 0 auto;box-shadow: 0px 4px 12px 0px rgba(105, 105, 105, 0.5);border-radius: 16rpx;overflow: hidden;}
.card-logo{position: relative; width: 276rpx;height: 46rpx;margin: 0 auto;margin-bottom: 32rpx;}
.card-logo image{width: 100%;height: 100%;}
.price-info{    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    color: #fff;
    justify-content: space-between;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.45) 45%, #000000 100%);
    padding: 20rpx;
    box-sizing: border-box;}
.inputxt{display: flex;height: 46px;line-height: 46px;align-items: center;padding-left:30rpx;background: #F6F6F6;margin-bottom: 30rpx;border-radius: 16rpx;}
.inputxt>text{display: block;width:77px; color: #222;font-size: 14px;}
.inputxt input{height: 100%;font-weight: 500;font-size: 14px;}
.inputxt input::placeholder{color: #aaa;}
.inputxt .icon{width: 49px;height: 49px;text-align: center;line-height: 49px;color: #222;}
.form{padding:40rpx 40rpx 0 40rpx;border-radius:32rpx 32rpx 0 0 ;margin-top: -20rpx;background-color: #fff;}
.tips{padding: 26rpx 54rpx;color: #999;font-size: 12px;}
.confirm-btn{border: 1px solid #222;box-sizing: border-box;background: #222;}
.fixedBtn .btn{background: #222;}
.rule-btn{position:absolute;right: 0;top:28rpx;font-size: 12px;color: #fff;padding: 0 8px;height: 24px;line-height: 24px;text-align: center;border-radius: 12px 0 0 12px; background-color:rgba(0, 0, 0, 0.5);}

.mask{position: fixed;left: 0;top: 0%; width: 100%;height: 100%;background: rgba(0,0,0,.3);z-index: 21;}
.rule-panel{ position: fixed;left: 50%;top:50%; background: url(https://api.withwheat.com/img/panel-bg.png) no-repeat 0 0;width: 592rpx;z-index: 22;transform: translate(-50%,-50%);background-size: 100% 100%; padding: 49rpx 44rpx 44rpx 44rpx;box-sizing: border-box;}
.rule-panel .close{position: absolute;transform: translateX(-50%);left: 50%; bottom:-40px;border-radius: 50%; border:1px solid #fff;width: 30px;height: 30px;line-height: 30px;color: #fff;}
.rule-panel .pop-con{height: 260px;}
.rule-panel .pop-con view{color: #333;font-size: 13px;line-height: 18px;}

.btn.unuse{opacity:.5 ;}

.pop-title{text-align: center;
    font-size: 17px;
    padding-top: 20rpx;
    font-weight: bold;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #C1996B;margin-bottom: 15px;}