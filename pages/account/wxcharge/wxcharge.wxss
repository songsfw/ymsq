page{background: #F6F6F6;}
.checkbox{position: relative; width: 15px;height: 15px;border: 1px solid #ccc;border-radius: 50%;line-height: 1;margin-right: 20rpx;box-sizing: border-box;}
.checkbox view{position: absolute;left:1px;top: 0; display: none; width: 100%;height: 100%;font-size: 15px;color:#C1996B;}
.checkbox.on{border: none;}
.checkbox.on view{display: block;}
.money-box .checkbox{transform: scale(1.4);}
.bg{position: absolute;left: 0;top: 0;width: 100%;height: 338rpx;}
.info{position: relative; padding: 62rpx 24rpx 50rpx 24rpx;z-index: 2;}
.info view{color: #fff;font-size:28rpx ;}
.info view text{font-size: 36rpx;}
.info .tit{font-size: 50rpx;margin-bottom: 10rpx;line-height: 68rpx;font-weight: bold;}
.money-box{position: relative; margin:20rpx 24rpx 0 24rpx;border-radius:16rpx;background: #fff;z-index: 1;}
.item{position: relative; height: 178rpx;padding: 26rpx 40rpx;box-sizing: border-box;align-items: center;justify-content: space-between;border-bottom: 1rpx solid #F6F6F6;}
.item:after{display: none; position: absolute;content: "";left: 0;top: 0;width:10rpx;height: 100%;background-color: #C1996B;}
.item .num{font-size: 13px;color: #222;line-height: 18px;}
.item .num text{font-size: 20px;font-weight: bold;}
.item.checked .num,
.item.checked .num text{color: #C1996B;}
.item .tag{font-size: 13px;color: #666;padding:4px 6px;line-height: 1;margin-top: 3px;}
.item.checked .tag{color: #FA603D;}
.item .tag text{color: #C1996B;
    margin-left: 10px;
    font-size: 12px;}
.item .option{position: absolute;right:-336rpx;top: 0;height: 100%;width: 336rpx;}
.check{position: relative; width:20px;height:20px;border: 1px solid #E9E9E9;border-radius: 50%;box-sizing: border-box;}

.item.checked{ background: rgba(193, 153, 107, 0.05);}
.item.checked:after{display: block;}
.item.checked .check .check-icon,
.policy .checkbox.checked .check-icon{display: block; position: absolute;left: 0;top:0;}

.policy{padding: 0 24rpx; margin-top: 30rpx;align-items: center;}
.policy navigator{display: inline;color: #C1996B;}
.policy .checkbox{margin-right: 18rpx;width:15px;height: 15px;background: #fff;}

.loading{text-align: center;color: #999;position: absolute;width: 100%;left: 0;top: 50%;transform: translate(0,-50%);}

.confirm-btn{border: 1px solid #C1996B;box-sizing: border-box;}
.rule-btn{position:absolute;right: 0;top:28rpx;font-size: 12px;color: #fff;padding: 0 8px;height: 24px;line-height: 24px;text-align: center;border-radius: 12px 0 0 12px; background-color:rgba(0, 0, 0, 0.5);}

.mask{position: fixed;left: 0;top: 0%; width: 100%;height: 100%;background: rgba(0,0,0,.3);z-index: 21;}
.rule-panel{ position: fixed;left: 50%;top:50%; background:#fff;width: 592rpx;z-index: 22;transform: translate(-50%,-50%);padding: 49rpx 44rpx 44rpx 44rpx;box-sizing: border-box;border-radius: 10px;}
.rule-panel .close{position: absolute;transform: translateX(-50%);left: 50%; bottom:-40px;border-radius: 50%; border:1px solid #fff;width: 30px;height: 30px;line-height: 30px;color: #fff;}

.rule-panel .pop-con view{color: #333;font-size: 13px;line-height: 20px;}
.rule-panel .pop-con{margin-bottom: 20px;}

.pop-title{text-align: center;
    font-size: 17px;
    font-weight: bold;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #C1996B;margin-bottom: 15px;}