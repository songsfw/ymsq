page{background: #F6F6F6;}
.bg{position: absolute;left: 0;top: 0;width: 100%;height: 430rpx;}
.info{position: relative; padding: 54rpx 0 0 40rpx;z-index: 2;}
.info view{color: #E2BC8B;}
.info .tit{font-size: 28rpx;}
.info .score{font-size: 50rpx;}
.money-box{position: relative; margin:20rpx 24rpx 0 24rpx;padding:32rpx 24rpx;border-radius:16rpx;background: #fff;z-index: 1;}

.item{padding: 26rpx 12rpx;border-bottom: 1px solid #e9e9e9;box-sizing: border-box;align-items: center;justify-content: space-between;}
.item .tit{font-size: 14px;color: #333;line-height: 20px;}
.item .date{font-size: 12px;color: #999;}

.item .price{font-size: 14px;}
.item .option{position: absolute;right:-336rpx;top: 0;height: 100%;width: 336rpx;}

.title{color: #fff;}
.money-box .h3{text-align: center;font-size: 15px;}
.money-box view:last-child{border: none;}