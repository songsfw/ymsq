page{background: #F6F6F6;}
.bg{position: absolute;left: 0;top: 0;width: 100%;height: 300rpx;}
.info{position: relative; width: 702rpx;height: 230rpx;background:url(https://api.withwheat.com/img/mai-bg2.png) no-repeat;background-size: contain; z-index:2;margin: 40rpx auto 20rpx auto;color:#4C3B2A; padding: 30rpx 36rpx;box-sizing: border-box;}
.info view{color: #4C3B2A;}
.info .tit{font-size: 28rpx;font-weight: 500;}
.info .score{font-size: 50rpx;font-weight: 500;text-align: center;margin-top: 10rpx;line-height: 72rpx;}
.money-box{position: relative; margin:20rpx 24rpx 0 24rpx;padding:32rpx 24rpx;border-radius:16rpx;background: #fff;z-index: 1;}

.item{padding: 26rpx 12rpx;border-bottom: 1rpx solid #F6F6F6;box-sizing: border-box;align-items: center;justify-content: space-between;}
.item .tit{font-size: 14px;color: #333;line-height: 20px;font-weight: bold;}
.item .date{font-size: 12px;color: #999;}

.item .price{font-size: 14px;}
.item .option{position: absolute;right:-336rpx;top: 0;height: 100%;width: 336rpx;}

.title{color: #fff;}
.money-box .h3{justify-content: center; text-align: center;font-size: 17px;font-weight: bold;}
.money-box .h3 text{display: inline-block;width: 4px;border-left: 2px solid #C1996B;border-right: 2px solid #C1996B;transform: skew(-30deg);justify-content: center;height: 14px;margin: 0 16px;}
.money-box .h3 text:last-child{margin-left: 14px;}
.money-box view:last-child{border: none;}