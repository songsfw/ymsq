<!-- pages/user/user.wxml -->
<navBar hasReturn navType="transparent" title="麦点" titColor="#fff"></navBar>
<view class="bg">
  <image src="http://api.withwheat.com/img/mai-bg.png" mode="widthFix"></image>
</view>
<view class="wrap" style="padding-bottom:{{btmHolder||0}}px">
  <scroll-view scroll-y="true" class="contain" bindscrolltolower="lower">
    <view class="info">
      <view class="tit">我的麦点</view>
      <view class="score">{{point}}</view>
    </view>
    <view class="money-box">
      <view class="h3 flex-center"><text ></text>麦点明细<text ></text></view>
      <block wx:if="{{pointList.length>0}}">
        <view class="item flex"  wx:for="{{pointList}}">
          <view class="">
            <view class="tit">{{item.title}}</view>
            <view class="date">{{item.create_time}}</view>
          </view>
          <view class="price">{{item.symbol}} {{item.score}}</view>
        </view>
      </block>
      <view class="loading nodata" wx:else>
        <view><image src="../../../image/no-data.png"></image></view>
        <view class="txt">暂无数据</view>
      </view>
    </view>
    <!-- <view class="logo">
      <image src="../../../image/logo.png"></image>
    </view> -->
  </scroll-view>  
</view>