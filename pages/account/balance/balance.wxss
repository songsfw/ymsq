page{padding-top: 46px;}
.list{padding: 0 24rpx;}
.item{position: relative; padding:34rpx 0;border-bottom: 1px solid #F6F6F6;justify-content: space-between;align-items: center;transition: all .3s linear;font-size: 14px;}
.item .address{font-size: 14px;color: #666;width: 462rpx;}
.hd{position: fixed; width: 100%;left: 0;top: 0;  height: 46px;background: #F6F6F6;font-size: 15px;padding: 24rpx;z-index: 2;align-items: center;justify-content: space-between;box-sizing: border-box;}

.selectItem .on{color:#4176FF;
    background: rgba(65, 118, 255, 0.1);}
.item text{color:#999 ;}
.hd text{padding: 0 12px;line-height: 30px;background: #fff;border-radius: 15px;margin-right: 10px;flex-shrink: 0;font-size: 14px;}
.hd text.on{background:#AC7D46;color: #fff;}

.mask{position: fixed;width:100%;height: 100%;left: 0;top: 0;z-index: 1;background: rgba(0, 0, 0, .3);}