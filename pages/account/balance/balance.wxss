page{padding-top: 46px;}
.list{padding: 0 24rpx;}
.item{position: relative; padding:34rpx 0;border-bottom: 1px solid #F6F6F6;justify-content: space-between;align-items: center;transition: all .3s linear;font-size: 14px;}
.item .address{font-size: 14px;color: #666;width: 462rpx;}
.hd{position: fixed; width: 100%;left: 0;top: 0;  height: 46px;line-height: 46px;background: #F6F6F6;text-align: right;font-size: 15px;padding-right: 24rpx;z-index: 2;}
.hd>view{float: right;height: 100%;align-items: center;}
.hd>view text{margin-right: 10rpx;transition: transform .3s linear;}
.hd>view.on .arrow-bottom{transform: rotateX(180deg);}
.selectItem .on{color:#4176FF;
    background: rgba(65, 118, 255, 0.1);}

.item text{color:#999 ;}
.tags{position: fixed;width: 100%;left: 0; top: 46px;background-color: #fff;z-index: 2;padding: 28rpx;box-sizing: border-box;border-radius: 0 0 8rpx 8rpx;}
.tags view{width:158rpx;margin:0 20rpx 20rpx 0;background: rgba(0, 0, 0, .04);height: 34px; line-height: 34px;text-align: center;box-sizing: border-box;border-radius: 8rpx;}
.tags view:nth-child(4n){margin-right: 0;}
.mask{position: fixed;width:100%;height: 100%;left: 0;top: 0;z-index: 1;background: rgba(0, 0, 0, .3);}