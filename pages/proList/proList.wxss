.good_box {
    width: 20px;
    height: 20px;
    position: fixed;
    border-radius: 50%;
    overflow: hidden;
    left: 0;
    top: 0;
    transform: translate3d(0,0,0);
    z-index: 99;
    border: 1px solid #fff;
    background: rgba(120, 188, 255, 0.2);
}

.good_box image {
    display: block;
    width: 100%;
    height: 100%;
}