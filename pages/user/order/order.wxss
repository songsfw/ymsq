.cancel-panel{left: 50%;top: 50%;height: auto;bottom: auto; transform: translate(-50%,-50%);padding:60rpx 40rpx 40rpx 40rpx;width: 630rpx;box-sizing: border-box;}
.cancel-panel .tit{font-size: 16px;font-weight: bold;margin-bottom: 50rpx;}
.cancel-panel .item{color: #999;font-size: 14px;margin:0 0 50rpx 0;justify-content: space-between;padding:0}
.checkbox{position: relative; width: 22px;height: 22px;border: 1px solid #ccc;border-radius: 50%;line-height: 1;margin-right: 16rpx;box-sizing: border-box;}
.checkbox view{position: absolute;left: 0;top: 0; display: none; width: 100%;height: 100%;font-size: 21px;color:#C1996B;line-height:1.04;}
.checkbox.on{border: none;}
.checkbox.on view{display: block;}
.reason-txt{height: 150rpx;width: 100%;background: #F6F6F6;font-size: 14px;padding:20rpx;box-sizing: border-box;margin:32rpx 0 60rpx 0;border-radius: 8rpx;}



.share-remark{display: flex;flex-direction: column;justify-content:space-between;color:white;text-align:center}
.share-remark-tip{font-size:13px;margin:7px;}
.share-remark-save{font-size:12px;border:1px solid white;border-radius: 50px;margin:0 auto;width:137px;padding:5px;}

.mix-order>.order-code{padding-left:20rpx; color: #C1996B;font-size: 15px;padding-bottom: 16rpx;border-bottom: 1px solid #F6F6F6;}
.mix-order .order-wp{padding:40rpx 20rpx 0 20rpx;}
.mix-order .option{padding-bottom: 40rpx; border-bottom: 1px dotted #F6F6F6;}
.mix-order .option:last-child{border: none;}