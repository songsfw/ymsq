page{height: auto;}
.address-list{border-top:20rpx solid #f6f6f6;overflow: hidden;}
.item{position: relative; padding:34rpx 24rpx;border-bottom: 1px solid #F6F6F6;justify-content: space-between;align-items: center;transition: all .3s linear;}
.item .edit{width: 80rpx;height: 80rpx;text-align: center;font-size: 36rpx; flex-shrink: 0;line-height: 80rpx;}
.name{align-items: center;margin-bottom: 12rpx;}
.name text{font-size: 30rpx;color: #222;margin-right: 22rpx;font-weight: bold;}
.item .address{font-size: 14px;color: #666;width: 462rpx;}
.item .tag{margin-left: 16rpx; font-size: 10px;color: #fff;background: #f5222d;padding: 10rpx;line-height: 1;border-radius: 4rpx;}
.item .option{position: absolute;right:-336rpx;top: 0;height: 100%;width: 336rpx;}
.del,.set-def{display: flex;align-items: center;justify-content: center; width: 168rpx; color: #fff;background: #E02020;height: 100%;}
.set-def{background: #f6f6f6;color: #222;}
.touch-item {
  display:flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  background: #f5f5f5;
  height: 216rpx;
  }
  
  .touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
  }
  .fixedBtn{background: #fff;}
  .nodata .btn{background-color: #fff;color: #222;border: 1px solid #ccc;}
  .notice{font-size: 14px;color: #666;text-align: right;padding: 30rpx;}