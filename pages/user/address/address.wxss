page{height: auto;}
.address-list{border-top:20rpx solid #f6f6f6;overflow: hidden;}
.item{position: relative;width: 100%;height: auto;border-bottom: 1px solid #F6F6F6;justify-content: space-between;align-items: center;transition: all .3s linear;box-sizing: border-box;}
.item .edit{padding: 0 24rpx;height: 80rpx;text-align: center;font-size: 36rpx; flex-shrink: 0;line-height: 80rpx;}
.name{align-items: center;margin-bottom: 6rpx;}
.name text{font-size: 30rpx;color: #222;margin-right: 22rpx;font-weight: bold;}
.item .address{font-size: 14px;color: #666;width: 500rpx;}
.item .tag{margin-left: 16rpx; font-size: 10px;color: #fff;background: #C1996B;padding: 10rpx;line-height: 1;border-radius: 4rpx;}
.item-wrap{width:750rpx; padding:16px 0 16px 12px;box-sizing: border-box;}
.move-area{position: relative;width:1086rpx;height:auto;}

.item .option{position: absolute;right:0;top: 0;height: 100%;width: 336rpx;}
.del,.set-def{display: flex;align-items: center;justify-content: center; width: 168rpx; color: #fff;background: #E02020;height: 100%;}
.set-def{background: #f6f6f6;color: #222;}
.touch-item {
  display:flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  background: #f5f5f5;
  height: 216rpx;
  }
  
  .touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
  }
.fixedBtn{background: #fff;}
.nodata .btn{background-color: #fff;color: #222;border: 1px solid #ccc;}
.notice{border-bottom: 1px solid #f6f6f6; font-size: 14px;color: #666;text-align: right;padding: 30rpx;}
.checkbox{position: relative; width: 18px;height: 18px;border: 1px solid #ccc;border-radius: 50%;line-height: 1;margin-right: 20rpx;box-sizing: border-box;}
.checkbox view{position: absolute;left: 0;top: 0; display: none; width: 100%;height: 100%;font-size: 18px;color:#C1996B;}
.checkbox.on{border: none;}
.checkbox.on view{display: block;}