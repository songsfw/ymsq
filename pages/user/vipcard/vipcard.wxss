page{background: #F6F6F6;}
.bg{width: 100%;height: 202rpx;background-color:#DBBC94 ;}
.card{margin:-130rpx 24rpx 0 24rpx;padding:36rpx 20rpx 20rpx 20rpx;border-radius:16rpx;background: #fff;box-shadow: 0px 16px 20px 0px rgba(204, 204, 204, 0.05);}
.card .hd{align-items: center;margin-left: 20rpx;}
.logo-txt{width: 104rpx;height: 42rpx;margin-bottom: 20rpx;}
.name{align-items: center;margin-bottom: 12rpx;}
.name text{font-size: 30rpx;color: #222;margin-right: 22rpx;font-weight: bold;}
.item .address{font-size: 14px;color: #666;width: 462rpx;}
.item .tag{margin-left: 16rpx; font-size: 10px;color: #fff;background: #f5222d;padding: 10rpx;line-height: 1;border-radius: 4rpx;}
.item .option{position: absolute;right:-336rpx;top: 0;height: 100%;width: 336rpx;}
.del,.set-def{display: flex;align-items: center;justify-content: center; width: 168rpx; color: #fff;background: #E02020;height: 100%;}
.set-def{background: #f6f6f6;color: #222;}
.card-info{width: 588rpx;margin:50rpx auto 32rpx auto ;}
.card-code{font-size: 26rpx;color: #222;margin-bottom: 16rpx;}
.num{margin-top: 32rpx;color: #999;text-align: center;}
.card-code-img{background: #e2e2e2;}
.card-code-img canvas{width: 100%;}
.txt{text-align: center;font-size: 28rpx;color: #333;margin-top: 40rpx;}
.touch-item {
  display:flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  background: #f5f5f5;
  height: 216rpx;
  }
  
.content {
width: 100%;
margin-right: 0;
-webkit-transition: all 0.4s;
transition: all 0.4s;
-webkit-transform: translateX(90px);
transform: translateX(90px);
margin-left: -90px;
}

.touch-move-active .content, .touch-move-active .del {
-webkit-transform: translateX(0);
transform: translateX(0);
}
.info view{font-weight: bold}
.icon-logo{width:96rpx ;height: 96rpx;margin-right: 20rpx;}
.show{width: 80rpx;height: 80rpx;transform: translateY(33rpx);color: #C1996B;text-align: center;line-height: 80rpx;}