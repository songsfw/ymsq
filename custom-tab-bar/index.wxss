.tab-bar{position: fixed;left: 0;bottom: 0;width: 100%;display: flex;height: 100rpx; justify-content: space-around;box-shadow: 0px -10px 18px 0px rgba(0, 0, 0, 0.04);background: #fff;}
.tabitem{flex: 1;text-align: center;display: flex;flex-direction: column;justify-content: center;padding-top: 12rpx;}
.tabitem .iconfont{position: relative;width: 50rpx;height: 50rpx;margin: 0 auto;color: #666;font-size: 44rpx;margin-bottom: 5rpx;}
.tabitem .iconfont::before{vertical-align: text-top;}
.tabitem .txt{font-size: 24rpx;}
.icon-logo{position: relative; width: 88rpx;height: 88rpx;margin: -45rpx auto 5rpx auto;}
.icon-photo{vertical-align: bottom;border-radius: 50%;}
.hasOrder:after{content: "";position: absolute;right: 0;top: 0;width: 18rpx;height: 18rpx;background-color: #EF344B;border-radius: 50%;animation: breath 2s linear infinite;}
.tab-toScore .circle{content: '';position: absolute;width: 88rpx;height: 88rpx;border: 1rpx solid #EF344B;border-radius: 50%;left: 50%;margin-left: -44rpx;
animation: circleMotion 1.3s linear infinite;opacity: .5;box-sizing: border-box;}

@keyframes breath{
    0%{opacity: 0;}
    50%{opacity: 1;}
    100%{opacity: 0;}
}

