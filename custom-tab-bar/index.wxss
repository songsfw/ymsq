.tab-bar{position: fixed;left: 0;bottom: 0;width: 100%;display: flex;height: 50px; justify-content: space-around;box-shadow: 0px -10px 18px 0px rgba(0, 0, 0, 0.04);background: #fff;}
.tabitem{flex: 1;text-align: center;display: flex;flex-direction: column;justify-content: center;padding-top: 6px;}
.tabitem .iconfont{position: relative;width: 25px;height: 25px;margin: 0 auto;color: #666;font-size: 22px;margin-bottom: 3px;}
.tabitem .iconfont::before{vertical-align: text-top;}
.tabitem .txt{font-size: 12px;}
.icon-logo{position: relative; width: 44px;height: 44px;margin: -22px auto 3px auto;}
.icon-photo{vertical-align: bottom;border-radius: 50%;}
.hasOrder:after{content: "";position: absolute;right: 0;top: 0;width: 9px;height: 9px;background-color: #EF344B;border-radius: 50%;animation: breath 2s linear infinite;}
.tab-toScore .circle{content: '';position: absolute;width: 44px;height: 44px;border: 1rpx solid #EF344B;border-radius: 50%;left: 50%;margin-left: -22px;
animation: circleMotion 1.3s linear infinite;opacity: .5;box-sizing: border-box;}

@keyframes breath{
    0%{opacity: 0;}
    50%{opacity: 1;}
    100%{opacity: 0;}
}

