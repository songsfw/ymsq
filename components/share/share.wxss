.share-no{width: 100%;height: 110rpx;line-height: 110rpx;text-align: center;border-top: 1px solid #f1f1f1;}
.share-top view text{width: 100%;text-align: center;display: block;margin-top: 30rpx;}

.mask{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: rgba(0,0,0,.2);z-index: 88;}