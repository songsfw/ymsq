.share-mask{position: fixed;width: 564rpx;height: 452rpx;left: 50%;top: 50%;margin-left: -282rpx;margin-top: -276rpx;background: #fff;border-radius: 18rpx;overflow: hidden;z-index: 99}
.share-fri image,.share-pyq image{width: 127rpx;height: 128rpx;}
.share-top{height: 340rpx;width: 470rpx;margin: 0 auto;}
.share-fri,.share-pyq{float: left;width: 235rpx;text-align: center;margin-top: 76rpx;position: relative;height: 200rpx;overflow: hidden}
.share-pyq{height: 210rpx}
